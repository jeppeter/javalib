<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Test" status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{36} [%F:%L] %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
    	<Logger name="com.github.jeppeter.extargsparse4j.Parser" level="debug" additivity="false">
    		<AppenderRef ref="Console"/>
    	</Logger>

        <Logger name="com.github.jeppeter.extargsparse4j.Key" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="com.github.jeppeter.extargsparse4j.ParserTest" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="com.github.jeppeter.extargsparse4j.KeyTest" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>